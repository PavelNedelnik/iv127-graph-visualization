{
    "cytoscape": {
        "position": "absolute",
        "width": "80%",
        "height": "80%",
        "z-index": 999
    },

    "stylesheet": [
        {
            "selector": "node",
            "style": {
                "content": "data(label)",
                "shape": "data(base_shape)",
                "text-valign":"bottom",
                "text-halign":"center",
                "text-rotation": "350deg",
                "background-opacity": "1",
                "border-opacity": "1",
                "border-width": "3"
                
            }
        },
        {
            "selector": "[selected = 'False']",
            "style": {
                "width": "30",
                "height": "30",
                "background-color": "data(base_color)",
                "background-opacity": "0.6",
                "border-color": "data(base_color)"
            }
        },
        {
            "selector": "[selected = 'True']",
            "style": {
                "width": "60",
                "height": "60",
                "background-color": "red",
                "border-color": "red"
            }
        },
        {
            "selector": "[selected = 'Child']",
            "style": {
                "width": "40",
                "height": "40",
                "background-color": "yellow",
                "border-color": "yellow"
            }
        },
        {
            "selector": "[selected = 'Parent']",
            "style": {
                "width": "40",
                "height": "40",
                "background-color": "orange",
                "border-color": "orange"
            }
        },
        {
            "selector": "edge",
            "style": {
                "target-arrow-shape": "vee",
                "curve-style": "bezier"
            }
        },
        {
            "selector": "[type = 'kc']",
            "style": {
                "target-arrow-color": "dimgrey",
                "line-color": "dimgrey"
            }
        },
        {
            "selector": "[type = 'ps']",
            "style": {
                "target-arrow-color": "silver",
                "line-color": "silver"
            }
        },
        {
            "selector": "[updated = 'Added']",
            "style": {
                "target-arrow-color": "red",
                "line-color": "red"
            }
        },
        {
            "selector": "[updated = 'Removed']",
            "style": {
                "target-arrow-color": "blue",
                "line-color": "blue"
            }
        }
    ]
}